generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  username    String   @unique @default("admin")
  password    String   @default("1234")
  prize       String   @default("Premio Sorpresa") // ðŸ†• El Regalo
  createdAt   DateTime @default(now())
  memberships Membership[]
  dailyCodes  DailyCode[]
  redemptions Redemption[] // ðŸ†• RelaciÃ³n con canjes
}

model User {
  id        String   @id @default(uuid())
  phone     String   @unique
  password  String   @default("1234")
  name      String?
  gender    String?  
  birthDate DateTime? 
  createdAt DateTime @default(now()) 
  memberships Membership[]
  redemptions Redemption[]
}

model Membership {
  id             String   @id @default(uuid())
  currentVisits  Int      @default(0)
  totalVisits    Int      @default(0)
  lastVisitAt    DateTime?
  tenantId       String
  tenant         Tenant   @relation(fields: [tenantId], references: [id])
  userId         String
  user           User     @relation(fields: [userId], references: [id])
  visits         Visit[]
  @@unique([tenantId, userId])
}

model DailyCode {
  id        String   @id @default(uuid())
  code      String
  validDate DateTime @default(now())
  isActive  Boolean  @default(true)
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  visits    Visit[]
}

model Visit {
  id        String   @id @default(uuid())
  visitedAt DateTime @default(now())
  membershipId String
  membership   Membership @relation(fields: [membershipId], references: [id])
  dailyCodeId String
  dailyCode   DailyCode @relation(fields: [dailyCodeId], references: [id])
  @@unique([membershipId, dailyCodeId])
}

// ðŸ†• MODELO PARA CANJES
model Redemption {
  id        String   @id @default(uuid())
  code      String   // El cÃ³digo corto (ej: WIN-999)
  isUsed    Boolean  @default(false)
  createdAt DateTime @default(now())
  
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}
